@page "/channels"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>Channel Tracking - YouTube Video Tracker</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-1">Channel Tracking</h1>
        <p class="text-muted mb-0">
            Track up to 50 YouTube channels to get personalized content suggestions when new videos are published.
        </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Channel List Component (moved to top) -->
        <div class="mb-4">
            <ChannelList @ref="ChannelListComponent" OnChannelsChanged="HandleChannelsChanged" />
        </div>

        <!-- Channel Search Component (moved below list) -->
        <ChannelSearch @ref="ChannelSearchComponent" OnChannelAdded="HandleChannelAdded" />
    </div>

    <div class="col-lg-4">
        <!-- Help and Tips -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-question-circle me-2"></i>
                    Channel Tracking Tips
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong><i class="bi bi-search text-primary me-2"></i>Search Methods:</strong>
                    <span class="text-muted small">Enter a channel name or YouTube channel URL</span>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-bell text-success me-2"></i>Smart Suggestions:</strong>
                    <span class="text-muted small">Get notified when tracked channels upload new videos</span>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-star text-warning me-2"></i>Rate Content:</strong>
                    <span class="text-muted small">Rate channels to improve future recommendations</span>
                </div>
                <div class="mb-0">
                    <strong><i class="bi bi-sliders text-info me-2"></i>Quality Control:</strong>
                    <span class="text-muted small">Remove channels anytime to keep your list curated</span>
                </div>
            </div>
        </div>

        <!-- Feature Preview -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-rocket me-2"></i>
                    Coming Soon
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    Features we're working on:
                </p>
                <ul class="list-unstyled small text-muted mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Automatic new video detection
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Channel performance analytics
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Bulk channel management
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Channel categorization
                    </li>
                    <li class="mb-0">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Export/import channel lists
                    </li>
                </ul>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-secondary btn-sm" disabled>
                        <i class="bi bi-upload me-2"></i>
                        Import Channels
                    </button>
                    <button type="button" class="btn btn-outline-info btn-sm" disabled>
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Check for Updates
                    </button>
                </div>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-info-circle me-1"></i>
                    These features will be available soon
                </small>
            </div>
        </div>
    </div>
</div>

@code {
    private ChannelSearch? ChannelSearchComponent;
    private ChannelList? ChannelListComponent;

    protected override async Task OnInitializedAsync()
    {
        // Component initialization
        await Task.CompletedTask;
    }

    /// <summary>
    /// Handles when a new channel is successfully added.
    /// Refreshes the channel list to show the new channel.
    /// </summary>
    private async Task HandleChannelAdded()
    {
        if (ChannelListComponent != null)
        {
            await ChannelListComponent.RefreshAsync();
        }
    }

    /// <summary>
    /// Handles when channels change (loaded, added, removed, etc.).
    /// Can be used for additional coordination between components.
    /// </summary>
    private async Task HandleChannelsChanged()
    {
        // Future: Could update global channel count, analytics, etc.
        await Task.CompletedTask;
    }
}

<style>
    /* Custom styling for the channels page */

    /* Quick action buttons */
    .btn:disabled {
        cursor: not-allowed;
        opacity: 0.5;
    }

    /* Icon spacing improvements */
    .card-title i {
        color: var(--bs-primary);
    }

    /* Feature list styling */
    .list-unstyled .bi-check-circle {
        font-size: 0.9rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .col-lg-8, .col-lg-4

    {
        margin-bottom: 1.5rem;
    }

    .card {
        margin-bottom: 1rem;
    }

    }

    @@media (max-width: 576px) {
        .d-flex.justify-content-between.align-items-center

    {
        flex-direction: column;
        align-items: flex-start !important;
    }

    .d-flex.justify-content-between.align-items-center > div:first-child {
        margin-bottom: 1rem;
    }

    }

    /* Card header icon color theming */
    [data-bs-theme="dark"] .card-title i {
        color: var(--bs-primary-text-emphasis);
    }
</style>