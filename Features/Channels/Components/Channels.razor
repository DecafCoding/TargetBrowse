@page "/channels"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>Channel Tracking - YouTube Video Tracker</PageTitle>

<div class="row">
    <div class="col-lg-3">
        <!-- Channel Search Component (moved to sidebar) -->
        <div class="mb-4">
            <ChannelSearch @ref="ChannelSearchComponent" OnChannelAdded="HandleChannelAdded" OnSearchCompleted="HandleSearchCompleted" />
        </div>

        <!-- Recent Messages -->
        <MessageSidebar />

        <!-- Channel Tracking Progress -->
        @if (ChannelListComponent != null && ChannelListComponent.TrackedChannelCount > 0)
        {
            <div class="card mb-4">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            @ChannelListComponent.TrackedChannelCount of 50 channels tracked
                        </small>
                        @if (ChannelListComponent.TrackedChannelCount >= 45)
                        {
                            <small class="text-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Approaching limit
                            </small>
                        }
                    </div>

                    <!-- Progress Bar -->
                    <div class="progress" style="height: 4px;">
                        <div class="progress-bar @ChannelListComponent.GetProgressBarClass()"
                             role="progressbar"
                             style="width: @(ChannelListComponent.TrackedChannelCount * 2)%"
                             aria-valuenow="@ChannelListComponent.TrackedChannelCount"
                             aria-valuemin="0"
                             aria-valuemax="50">
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Help and Tips -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-question-circle me-2"></i>
                    Tips
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong><i class="bi bi-search text-primary me-2"></i>Search Methods:</strong>
                    <span class="text-muted small">Enter a channel name or YouTube channel URL</span>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-bell text-success me-2"></i>Smart Suggestions:</strong>
                    <span class="text-muted small">Get notified when tracked channels upload new videos</span>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-star text-warning me-2"></i>Rate Content:</strong>
                    <span class="text-muted small">Rate channels to improve future recommendations</span>
                </div>
                <div class="mb-0">
                    <strong><i class="bi bi-sliders text-info me-2"></i>Quality Control:</strong>
                    <span class="text-muted small">Remove channels anytime to keep your list curated</span>
                </div>
            </div>
        </div>

        <!-- Feature Preview -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-rocket me-2"></i>
                    Coming Soon
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    Features we're working on:
                </p>
                <ul class="list-unstyled small text-muted mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Automatic new video detection
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Channel performance analytics
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Bulk channel management
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Channel categorization
                    </li>
                    <li class="mb-0">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Export/import channel lists
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <!-- Channel List Component -->
        <ChannelList @ref="ChannelListComponent"
                     OnChannelsChanged="HandleChannelsChanged"
                     SearchResults="@SearchResults" />
    </div>
</div>