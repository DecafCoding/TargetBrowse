@using Microsoft.AspNetCore.Authorization
@using TargetBrowse.Features.Channels.Models

@attribute [Authorize]

@rendermode InteractiveServer

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            Add A New Channel
        </h5>
    </div>
    <div class="card-body">
        <!-- Search Form -->
        <EditForm Model="@SearchModel" OnValidSubmit="@HandleSearch">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <div class="input-group">
                    <InputText @bind-Value="SearchModel.SearchQuery"
                               class="@($"form-control {(ShouldShowPulse() ? "input-pulse-green" : "")}")"
                               id="searchQuery"
                               placeholder="Search Term or URL"
                               disabled="@IsSearching" />
                    <button type="submit"
                            class="@($"btn btn-primary {(ShouldShowPulse() ? "btn-pulse-green" : "")}")"
                            disabled="@IsSearching">
                        @if (IsSearching)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        }
                        else
                        {
                            <i class="bi bi-search"></i>
                        }
                    </button>
                </div>
                <ValidationMessage For="@(() => SearchModel.SearchQuery)" class="text-danger" />
                <div class="form-text">
                    Search by channel name or paste a YouTube channel URL (youtube.com/channel/, youtube.com/, etc.)
                </div>
            </div>
        </EditForm>
    </div>
</div>