@page "/rating-history"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using TargetBrowse.Features.Videos.Services
@using TargetBrowse.Features.Videos.Models
@using TargetBrowse.Features.RatingHistory.Components
@using TargetBrowse.Services
@using TargetBrowse.Services.Utilities
@using TargetBrowse.Components.Shared
@attribute [Authorize]

<PageTitle>My Rating History - TargetBrowse</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <!-- Left Sidebar -->
        <div class="col-lg-3">
            <!-- Sidebar Content -->
            <div class="sidebar-content">
            <!-- Search & Filter Bar -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Rating History</h5>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex flex-column gap-3">
                        <!-- Search Input -->
                        <div>
                            <div class="input-group input-group-sm">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Search by title or notes..."
                                       value="@searchQuery"
                                       @oninput="OnSearchInput" />
                                @if (!string.IsNullOrWhiteSpace(searchQuery))
                                {
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            @onclick="ClearSearch">
                                        <i class="bi bi-x"></i>
                                    </button>
                                }
                                <button class="btn btn-primary"
                                        type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Rating Filter Dropdown -->
                        @if (stats != null && stats.TotalRatings > 0)
                        {
                            <div>
                                <div class="dropdown d-grid">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                            type="button"
                                            data-bs-toggle="dropdown">
                                        <i class="bi bi-star-fill me-1"></i>
                                        Filter: @GetCurrentFilterDisplay()
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <button class="dropdown-item" @onclick='() => SetRatingFilter("", $"All Ratings ({stats.TotalRatings})")'>
                                                <span>All Ratings (@stats.TotalRatings)</span>
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <button class="dropdown-item" @onclick='() => SetRatingFilter("5", GetFilterLabel(5))'>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                <span class="ms-1">(@GetStarCount(5))</span>
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" @onclick='() => SetRatingFilter("4", GetFilterLabel(4))'>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= 4)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ms-1">(@GetStarCount(4))</span>
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" @onclick='() => SetRatingFilter("3", GetFilterLabel(3))'>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= 3)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ms-1">(@GetStarCount(3))</span>
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" @onclick='() => SetRatingFilter("1-2", GetFilterLabel(12))'>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= 2)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ms-1">(@(GetStarCount(2) + GetStarCount(1)))</span>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }

                        <!-- Sort Dropdown -->
                        <div>
                            <div class="dropdown d-grid">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown">
                                    <i class="bi bi-funnel me-1"></i>
                                    Sort By: @currentSortLabel
                                </button>
                                <ul class="dropdown-menu">
                                    <li><button class="dropdown-item" @onclick='() => SetSort("newest", "Newest First")'>Newest First</button></li>
                                    <li><button class="dropdown-item" @onclick='() => SetSort("oldest", "Oldest First")'>Oldest First</button></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><button class="dropdown-item" @onclick='() => SetSort("highest", "Highest Rated")'>Highest Rated</button></li>
                                    <li><button class="dropdown-item" @onclick='() => SetSort("lowest", "Lowest Rated")'>Lowest Rated</button></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Message Center -->
            <MessageSidebar />
            </div>
        </div>

        <!-- Right Content Area -->
        <div class="col-lg-9">
            <!-- Rating History Table -->
            <div class="card">
                <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2">Loading your rating history...</p>
                </div>
            }
            else if (totalRatings == 0 && string.IsNullOrEmpty(searchQuery) && string.IsNullOrEmpty(filterStars))
            {
                <!-- Empty State - No ratings at all -->
                <div class="text-center py-5">
                    <i class="bi bi-star display-1 text-muted"></i>
                    <h4 class="mt-3">No Ratings Yet</h4>
                    <p class="text-muted">Start rating videos to see your history here!</p>
                    <a href="/video-library" class="btn btn-primary mt-2">
                        <i class="bi bi-collection-play me-2"></i>
                        Go to Video Library
                    </a>
                </div>
            }
            else if (ratings.Count == 0)
            {
                <!-- Empty State - No results for current filter/search -->
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3">No Matching Ratings</h4>
                    <p class="text-muted">Try adjusting your filters or search query.</p>
                    <button class="btn btn-outline-primary" @onclick="ClearFilters">
                        Clear Filters
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle table-sm">
                        <thead class="table"">
                            <tr>
                                <th style="width: 100px;" class="d-none d-md-table-cell">Thumbnail</th>
                                <th>Title</th>
                                <th style="width: 140px;">Rating</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rating in ratings)
                            {
                                <tr>
                                    <td class="d-none d-md-table-cell">
                                        <img src="@GetThumbnailUrl(rating.YouTubeVideoId)"
                                             alt="@rating.VideoTitle"
                                             style="width: 80px; height: 60px; object-fit: cover;" />
                                    </td>
                                    <td>
                                        <div>
                                            <a href="/watch/@rating.YouTubeVideoId" class="text-decoration-none video-text text-white">
                                                @((MarkupString)System.Net.WebUtility.HtmlDecode(rating.VideoTitle))
                                            </a>
                                            <div class="d-md-none small text-muted mt-1">
                                                <div style="cursor: pointer;" @onclick="() => EditRating(rating)">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        var starNumber = i;
                                                        if (starNumber <= rating.Stars)
                                                        {
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-muted"></i>
                                                        }
                                                    }
                                                </div>
                                                <span class="ms-2">
                                                    @FormatHelper.FormatDateDisplay(rating.CreatedAt)
                                                </span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <div style="cursor: pointer;" @onclick="() => EditRating(rating)">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                var starNumber = i;
                                                if (starNumber <= rating.Stars)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-muted"></i>
                                                }
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate"
                                             style="max-width: 500px;"
                                             title="@rating.Notes">
                                            @rating.Notes
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-3 gap-2">
                    <div class="text-muted small">
                        Showing @GetStartRecord() - @GetEndRecord() of @totalRatings
                    </div>

                    <div class="d-flex gap-2 align-items-center">
                        <!-- Page Size Selector -->
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown">
                                @pageSize per page
                            </button>
                            <ul class="dropdown-menu">
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(10)">10 per page</button></li>
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(20)">20 per page</button></li>
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(50)">50 per page</button></li>
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(100)">100 per page</button></li>
                            </ul>
                        </div>

                        <!-- Pagination Controls -->
                        @if (totalPages > 1)
                        {
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(1)" disabled="@(currentPage == 1)">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage == 1)">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                    </li>

                                    @foreach (var pageNum in GetVisiblePages())
                                    {
                                        var pageNumber = pageNum;
                                        <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(totalPages)" disabled="@(currentPage == totalPages)">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rating Edit Modal -->
<EditRatingModal IsVisible="@showEditModal"
                 RatingId="@selectedRatingId"
                 VideoTitle="@selectedVideoTitle"
                 Stars="@selectedStars"
                 Notes="@selectedNotes"
                 OnClose="@OnModalClose"
                 OnSubmit="@HandleRatingSubmit"
                 OnDelete="@HandleRatingDelete" />
