@page "/rating-history"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using TargetBrowse.Features.Videos.Services
@using TargetBrowse.Features.Videos.Models
@using TargetBrowse.Features.RatingHistory.Components
@using TargetBrowse.Services
@using TargetBrowse.Services.Utilities
@attribute [Authorize]

<PageTitle>My Rating History - TargetBrowse</PageTitle>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history me-2"></i>My Rating History</h2>
    </div>

    <!-- Stats Summary Cards -->
    @if (stats != null && stats.TotalRatings > 0)
    {
        <div class="row mb-4 g-3">
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-2 small">Total Ratings</h6>
                        <h3 class="mb-0">@stats.TotalRatings</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-2 small">Average</h6>
                        <h3 class="mb-0">
                            @stats.AverageStarsGiven.ToString("0.0")
                            <i class="bi bi-star-fill text-warning" style="font-size: 0.7em;"></i>
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-2 small">
                            <i class="bi bi-star-fill text-warning"></i> 5 Stars
                        </h6>
                        <h3 class="mb-0">@GetStarCount(5)</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-2 small">
                            <i class="bi bi-star-fill text-warning"></i> 4 Stars
                        </h6>
                        <h3 class="mb-0">@GetStarCount(4)</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-2 small">
                            <i class="bi bi-star-fill text-warning"></i> 3 Stars
                        </h6>
                        <h3 class="mb-0">@GetStarCount(3)</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h6 class="text-muted mb-2 small">
                            <i class="bi bi-star-fill text-warning"></i> 1-2 Stars
                        </h6>
                        <h3 class="mb-0">@(GetStarCount(2) + GetStarCount(1))</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Search & Filter Bar -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-3">
                <!-- Search Input -->
                <div class="flex-grow-1" style="min-width: 200px;">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Search by title or notes..."
                               value="@searchQuery"
                               @oninput="OnSearchInput" />
                        @if (!string.IsNullOrWhiteSpace(searchQuery))
                        {
                            <button class="btn btn-outline-secondary"
                                    type="button"
                                    @onclick="ClearSearch">
                                <i class="bi bi-x"></i>
                            </button>
                        }
                    </div>
                </div>

                <!-- Rating Filter Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-star me-1"></i>
                        Filter: @currentFilterLabel
                    </button>
                    <ul class="dropdown-menu">
                        <li><button class="dropdown-item" @onclick='() => SetRatingFilter("", "All Ratings")'>All Ratings</button></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><button class="dropdown-item" @onclick='() => SetRatingFilter("5", "⭐⭐⭐⭐⭐ 5 Stars")'>⭐⭐⭐⭐⭐ 5 Stars</button></li>
                        <li><button class="dropdown-item" @onclick='() => SetRatingFilter("4", "⭐⭐⭐⭐ 4+ Stars")'>⭐⭐⭐⭐ 4+ Stars</button></li>
                        <li><button class="dropdown-item" @onclick='() => SetRatingFilter("3", "⭐⭐⭐ 3+ Stars")'>⭐⭐⭐ 3+ Stars</button></li>
                        <li><button class="dropdown-item" @onclick='() => SetRatingFilter("1-2", "⭐⭐ 1-2 Stars")'>⭐⭐ 1-2 Stars</button></li>
                    </ul>
                </div>

                <!-- Sort Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-funnel me-1"></i>
                        Sort: @currentSortLabel
                    </button>
                    <ul class="dropdown-menu">
                        <li><button class="dropdown-item" @onclick='() => SetSort("newest", "Newest First")'>Newest First</button></li>
                        <li><button class="dropdown-item" @onclick='() => SetSort("oldest", "Oldest First")'>Oldest First</button></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><button class="dropdown-item" @onclick='() => SetSort("highest", "Highest Rated")'>Highest Rated</button></li>
                        <li><button class="dropdown-item" @onclick='() => SetSort("lowest", "Lowest Rated")'>Lowest Rated</button></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Rating History Table -->
    <div class="card">
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2">Loading your rating history...</p>
                </div>
            }
            else if (totalRatings == 0 && string.IsNullOrEmpty(searchQuery) && string.IsNullOrEmpty(filterStars))
            {
                <!-- Empty State - No ratings at all -->
                <div class="text-center py-5">
                    <i class="bi bi-star display-1 text-muted"></i>
                    <h4 class="mt-3">No Ratings Yet</h4>
                    <p class="text-muted">Start rating videos to see your history here!</p>
                    <a href="/video-library" class="btn btn-primary mt-2">
                        <i class="bi bi-collection-play me-2"></i>
                        Go to Video Library
                    </a>
                </div>
            }
            else if (ratings.Count == 0)
            {
                <!-- Empty State - No results for current filter/search -->
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3">No Matching Ratings</h4>
                    <p class="text-muted">Try adjusting your filters or search query.</p>
                    <button class="btn btn-outline-primary" @onclick="ClearFilters">
                        Clear Filters
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle table-sm">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;" class="d-none d-md-table-cell">Thumbnail</th>
                                <th>Title</th>
                                <th style="width: 140px;">Rating</th>
                                <th class="d-none d-lg-table-cell">Notes</th>
                                <th style="width: 110px;" class="d-none d-md-table-cell">Date</th>
                                <th style="width: 160px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rating in ratings)
                            {
                                <tr>
                                    <td class="d-none d-md-table-cell">
                                        <img src="@GetThumbnailUrl(rating.YouTubeVideoId)"
                                             alt="@rating.VideoTitle"
                                             class="img-thumbnail"
                                             style="width: 80px; height: 60px; object-fit: cover;" />
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@rating.VideoTitle</strong>
                                            <div class="d-md-none small text-muted mt-1">
                                                <StarDisplay Stars="@rating.Stars" CssClass="small" />
                                                <span class="ms-2">
                                                    @FormatHelper.FormatDateDisplay(rating.CreatedAt)
                                                </span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <StarDisplay Stars="@rating.Stars" CssClass="small" />
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        <div class="text-truncate"
                                             style="max-width: 350px;"
                                             title="@rating.Notes">
                                            @rating.Notes
                                        </div>
                                    </td>
                                    <td class="text-muted small d-none d-md-table-cell">
                                        @FormatHelper.FormatDateDisplay(rating.CreatedAt)
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <a href="/watch/@rating.YouTubeVideoId"
                                               target="_blank"
                                               class="btn btn-outline-secondary btn-sm"
                                               title="Watch video">
                                                <i class="bi bi-play-circle"></i>
                                                <span class="d-none d-sm-inline ms-1">Watch</span>
                                            </a>
                                            <button class="btn btn-outline-primary btn-sm"
                                                    @onclick="() => EditRating(rating)"
                                                    title="Edit rating">
                                                <i class="bi bi-pencil"></i>
                                                <span class="d-none d-sm-inline ms-1">Edit</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-3 gap-2">
                    <div class="text-muted small">
                        Showing @GetStartRecord() - @GetEndRecord() of @totalRatings
                    </div>

                    <div class="d-flex gap-2 align-items-center">
                        <!-- Page Size Selector -->
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown">
                                @pageSize per page
                            </button>
                            <ul class="dropdown-menu">
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(10)">10 per page</button></li>
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(20)">20 per page</button></li>
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(50)">50 per page</button></li>
                                <li><button class="dropdown-item" @onclick="() => SetPageSize(100)">100 per page</button></li>
                            </ul>
                        </div>

                        <!-- Pagination Controls -->
                        @if (totalPages > 1)
                        {
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(1)" disabled="@(currentPage == 1)">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage == 1)">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                    </li>

                                    @foreach (var pageNum in GetVisiblePages())
                                    {
                                        var pageNumber = pageNum;
                                        <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(pageNumber)">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(totalPages)" disabled="@(currentPage == totalPages)">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Rating Edit Modal -->
<EditRatingModal IsVisible="@showEditModal"
                 RatingId="@selectedRatingId"
                 VideoTitle="@selectedVideoTitle"
                 Stars="@selectedStars"
                 Notes="@selectedNotes"
                 OnClose="@OnModalClose"
                 OnSubmit="@HandleRatingSubmit"
                 OnDelete="@HandleRatingDelete" />
