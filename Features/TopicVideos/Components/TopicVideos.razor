@page "/topics/{topicId:guid}/videos"

@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

@attribute [Authorize]

<PageTitle>@GetPageTitle()</PageTitle>

<!-- Main Content -->
@if (HasError && CurrentTopic == null)
{
    <!-- Error State for Invalid Topic -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-body text-center py-5">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-danger">Topic Not Accessible</h4>
                    <p class="text-muted mb-4">
                        The topic you're looking for doesn't exist or you don't have permission to view it.
                        It may have been deleted or the URL is incorrect.
                    </p>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="/topics" class="btn btn-primary">
                            <i class="bi bi-list-ul me-2"></i>
                            View My Topics
                        </a>
                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="RetryLoadTopic">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            Try Again
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-3">
            <!-- Topic Videos Info Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        Topic Videos
                    </h5>
                </div>
                <div class="card-body p-3">
                    @if (CurrentTopic != null)
                    {
                        <h6 class="mb-2">@CurrentTopic.Name</h6>
                        @if (TopicVideosListComponent?.Videos != null && TopicVideosListComponent.Videos.Any())
                        {
                            <p class="text-muted small mb-3">
                                @TopicVideosListComponent.Videos.Count Video@(TopicVideosListComponent.Videos.Count == 1 ? "" : "s") Found
                                @if (TopicVideosListComponent.HighRelevanceCount > 0)
                                {
                                    <br />
                                    <span>@TopicVideosListComponent.HighRelevanceCount highly relevant</span>
                                }
                            </p>
                        }

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2">
                            <a href="/topics" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-2"></i>
                                Back to Topics
                            </a>

                            <button type="button"
                                    class="btn btn-primary btn-sm"
                                    @onclick="RefreshVideos"
                                    disabled="@IsRefreshing"
                                    title="Search for new videos">
                                @if (IsRefreshing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                else
                                {
                                    <i class="bi bi-search me-2"></i>
                                }
                                @(IsRefreshing ? "Searching..." : "Search YouTube")
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- About Topic Video Search -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        About Topic Video Search
                    </h5>
                </div>
                <div class="card-body p-3">
                    <div class="mb-2">
                        <strong class="small">Last Updated:</strong>
                        <span class="small text-muted">@CurrentTopic?.LastCheckedDateDisplay</span>
                    </div>
                    <div class="mb-3">
                        <strong class="small">Check Frequency:</strong>
                        <span class="small text-muted">@CurrentTopic?.CheckFrequencyDisplay</span>
                    </div>
                    <hr class="my-2" />
                    <div class="mb-2">
                        <strong class="small">Search Scope:</strong>
                        <span class="small text-muted">Past 12 Months</span>
                    </div>
                    <div class="mb-2">
                        <strong class="small">Age:</strong>
                        <span class="small text-muted">Newest First</span>
                    </div>
                </div>
            </div>

            <!-- Recent Messages -->
            <MessageSidebar />
        </div>

        <div class="col-lg-9">
            <!-- Topic Videos List Component -->
            <TopicVideosList @ref="TopicVideosListComponent"
                             TopicId="@TopicId"
                             TopicName="@CurrentTopic?.Name"
                             MaxResults="50"
                             OnVideoAdded="@HandleVideoAdded" />
        </div>
    </div>
}
