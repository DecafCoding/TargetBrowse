@page "/topics/{topicId:guid}/videos"

@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

@attribute [Authorize]

<PageTitle>@GetPageTitle()</PageTitle>

<!-- Main Content -->
@if (HasError && CurrentTopic == null)
{
    <!-- Error State for Invalid Topic -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-body text-center py-5">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-danger">Topic Not Accessible</h4>
                    <p class="text-muted mb-4">
                        The topic you're looking for doesn't exist or you don't have permission to view it.
                        It may have been deleted or the URL is incorrect.
                    </p>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="/topics" class="btn btn-primary">
                            <i class="bi bi-list-ul me-2"></i>
                            View My Topics
                        </a>
                        <button type="button" 
                                class="btn btn-outline-secondary"
                                @onclick="RetryLoadTopic">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            Try Again
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Topic Videos List Component -->
    <TopicVideosList @ref="TopicVideosListComponent"
                     TopicId="@TopicId"
                     TopicName="@CurrentTopic?.Name"
                     MaxResults="50"
                     OnVideoAdded="@HandleVideoAdded" />
}

<!-- Help Section -->
@if (!HasError && CurrentTopic != null)
{
    <div class="row mt-5">
        <div class="col-lg-8 offset-lg-2">
            <div class="card border-0">
                <div class="card-body">
                    <h6 class="card-title mb-3">
                        <i class="bi bi-lightbulb me-2 text-warning"></i>
                        About Topic Video Search
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-2">
                                <strong>Search Scope:</strong>
                                <span class="text-muted small">Past 12 months of YouTube content</span>
                            </div>
                            <div class="mb-2">
                                <strong>Relevance:</strong>
                                <span class="text-muted small">Videos ranked by topic keyword matching</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-2">
                                <strong>Save Videos:</strong>
                                <span class="text-muted small">Add interesting videos to your library</span>
                            </div>
                            <div class="mb-2">
                                <strong>Fresh Content:</strong>
                                <span class="text-muted small">Click "Search YouTube" for latest results</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}