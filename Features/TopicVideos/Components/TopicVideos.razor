@page "/topics/{topicId:guid}/videos"

@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

@attribute [Authorize]

<PageTitle>@GetPageTitle() - YouTube Video Tracker</PageTitle>

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/" class="text-decoration-none">
                <i class="bi bi-house-door me-1"></i>
                Home
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="/topics" class="text-decoration-none">
                <i class="bi bi-list-ul me-1"></i>
                Topics
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            @if (IsLoading)
            {
                <span class="placeholder-glow">
                    <span class="placeholder col-4"></span>
                </span>
            }
            else if (CurrentTopic != null)
            {
                <span>@CurrentTopic.Name</span>
            }
            else
            {
                <span>Recent Videos</span>
            }
        </li>
    </ol>
</nav>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="flex-grow-1">
        @if (IsLoading)
        {
            <div class="placeholder-glow">
                <h1 class="h2 mb-1">
                    <span class="placeholder col-6"></span>
                </h1>
                <p class="text-muted mb-0">
                    <span class="placeholder col-8"></span>
                </p>
            </div>
        }
        else if (CurrentTopic != null)
        {
            <h1 class="h2 mb-1">
                <i class="bi bi-play-circle me-2 text-primary"></i>
                Recent Videos: @CurrentTopic.Name
            </h1>
            <p class="text-muted mb-0">
                Discover the latest YouTube content related to your topic. 
                Videos from the past year, sorted by relevance.
            </p>
        }
        else if (HasError)
        {
            <h1 class="h2 mb-1 text-danger">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Topic Not Found
            </h1>
            <p class="text-muted mb-0">
                The requested topic could not be found or you don't have access to it.
            </p>
        }
        else
        {
            <h1 class="h2 mb-1">
                <i class="bi bi-play-circle me-2 text-primary"></i>
                Recent Videos
            </h1>
            <p class="text-muted mb-0">
                Loading topic information...
            </p>
        }
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-2">
        @if (!IsLoading && CurrentTopic != null)
        {
            <!-- Back to Topics Button -->
            <a href="/topics" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>
                Back to Topics
            </a>

            <!-- Refresh Button -->
            <button type="button"
                    class="btn btn-primary"
                    @onclick="RefreshVideos"
                    disabled="@IsRefreshing"
                    title="Search for new videos">
                @if (IsRefreshing)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                else
                {
                    <i class="bi bi-search me-2"></i>
                }
                @(IsRefreshing ? "Searching..." : "Search YouTube")
            </button>
        }
        else if (HasError)
        {
            <a href="/topics" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>
                Return to Topics
            </a>
        }
    </div>
</div>

<!-- Main Content -->
@if (HasError && CurrentTopic == null)
{
    <!-- Error State for Invalid Topic -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-body text-center py-5">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-danger">Topic Not Accessible</h4>
                    <p class="text-muted mb-4">
                        The topic you're looking for doesn't exist or you don't have permission to view it.
                        It may have been deleted or the URL is incorrect.
                    </p>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="/topics" class="btn btn-primary">
                            <i class="bi bi-list-ul me-2"></i>
                            View My Topics
                        </a>
                        <button type="button" 
                                class="btn btn-outline-secondary"
                                @onclick="RetryLoadTopic">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            Try Again
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Topic Videos List Component -->
    <TopicVideosList @ref="TopicVideosListComponent"
                     TopicId="@TopicId"
                     TopicName="@CurrentTopic?.Name"
                     MaxResults="50"
                     OnVideoAdded="@HandleVideoAdded" />
}

<!-- Help Section -->
@if (!HasError && CurrentTopic != null)
{
    <div class="row mt-5">
        <div class="col-lg-8 offset-lg-2">
            <div class="card bg-light border-0">
                <div class="card-body">
                    <h6 class="card-title mb-3">
                        <i class="bi bi-lightbulb me-2 text-warning"></i>
                        About Topic Video Search
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-2">
                                <strong>Search Scope:</strong>
                                <span class="text-muted small">Past 12 months of YouTube content</span>
                            </div>
                            <div class="mb-2">
                                <strong>Relevance:</strong>
                                <span class="text-muted small">Videos ranked by topic keyword matching</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-2">
                                <strong>Save Videos:</strong>
                                <span class="text-muted small">Add interesting videos to your library</span>
                            </div>
                            <div class="mb-2">
                                <strong>Fresh Content:</strong>
                                <span class="text-muted small">Click "Search YouTube" for latest results</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}