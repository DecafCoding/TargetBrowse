@page "/projects/{id:guid}"
@using Microsoft.AspNetCore.Authorization
@using TargetBrowse.Features.Projects.Models
@using TargetBrowse.Features.Projects.Components
@using TargetBrowse.Components.Shared
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>@(Project?.Name ?? "Project")</PageTitle>

<div class="container mt-2">
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="mt-3 text-muted">Loading project details...</div>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Error Loading Project
            </h5>
            <p class="mb-2">@ErrorMessage</p>
            <button class="btn btn-outline-danger btn-sm me-2" @onclick="RetryLoad">
                <i class="bi bi-arrow-clockwise me-1"></i>
                Try Again
            </button>
            <a href="/projects" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>
                Back to Projects
            </a>
        </div>
    }
    else if (Project == null)
    {
        <div class="text-center py-5">
            <i class="bi bi-folder-x text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3 text-muted">Project Not Found</h5>
            <p class="text-muted">The project you're looking for doesn't exist or you don't have access to it.</p>
            <a href="/projects" class="btn btn-primary mt-3">
                <i class="bi bi-arrow-left me-2"></i>
                Back to Projects
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @* Left Sidebar *@
            <div class="col-lg-3">
                @* Project Info Card *@
                <div class="card mb-2">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            Project Info
                        </h5>
                        <button class="btn btn-outline-secondary btn-sm" @onclick="ShowEditModal">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="mb-2">@Project.Name</h6>
                            @if (!string.IsNullOrEmpty(Project.Description))
                            {
                                <p class="text-muted small mb-0 mt-2">@Project.Description</p>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(Project.UserGuidance))
                        {
                            <div class="mb-3">
                                <p class="text-muted small mb-0 mt-1"><strong class="small">Focus:</strong> @Project.UserGuidance</p>
                            </div>
                        }
                        <div>
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>
                                Updated: @Project.LastModifiedAt.ToString("MMM d, yyyy")
                            </small>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">
                                <i class="bi bi-collection-play me-1"></i>
                                @Project.Videos.Count / 10 videos
                            </small>
                        </div>
                    </div>
                </div>

                @* Guide Section *@
                <div class="card mb-2">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Project Guide</h5>
                    </div>
                    @if (IsGeneratingGuide)
                    {
                        <div class="card-body">
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Generating guide...</span>
                                </div>
                                <div class="mt-3">
                                    <h5>Generating your project guide...</h5>
                                    <p class="text-muted">This may take a minute. Please don't close this page.</p>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Project.GuideContent == null)
                    {
                        @* Prerequisites Check *@
                        <div class="card-body">
                            <h6 class="mb-3">Prerequisites for Guide Generation</h6>
                            <ul class="list-unstyled mb-3">
                                @if (Project.Videos.Count < 3)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-x-circle-fill text-danger me-2"></i>
                                        <span>At least 3 videos in the project</span>
                                    </li>
                                }
                                @if (!Project.AllVideosHaveSummaries)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-x-circle-fill text-danger me-2"></i>
                                        <span>All videos need summaries</span>
                                    </li>
                                }
                                <li class="mb-2">
                                    @if (CanGenerate)
                                    {
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        <span>Daily AI Limit (@DailyCallCount/10 calls)</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle-fill text-danger me-2"></i>
                                        <span>Daily limit reached (10/10 calls used)</span>
                                    }
                                </li>
                            </ul>
                            <button class="btn btn-primary"
                                    @onclick="HandleGenerateGuide"
                                    disabled="@(!CanGenerate || Project.Videos.Count < 3 || !Project.AllVideosHaveSummaries)">
                                <i class="bi bi-stars me-2"></i>
                                Generate Project Guide
                            </button>
                            @if (!CanGenerate)
                            {
                                <p class="text-muted small mt-2 mb-0">
                                    <i class="bi bi-info-circle me-1"></i>
                                    You've reached your daily limit of 10 AI-powered operations. The limit resets at midnight UTC.
                                </p>
                            }
                        </div>
                    }
                    else
                    {
                        @* Display Guide *@
                        <div class="card-body">
                            <button type="button"
                                    class="btn btn-outline-primary btn-sm"
                                    @onclick="HandleRegenerateGuide"
                                    disabled="@(!CanGenerate)">
                                <i class="bi bi-arrow-clockwise me-1"></i>
                                Regenerate Guide
                            </button>
                            @if (Project.NeedsRegeneration)
                            {
                                <div class="alert alert-warning mb-4">
                                    <h6 class="alert-heading">
                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                        Guide may be outdated
                                    </h6>
                                    <p class="mb-0 small">
                                        The project has changed since the guide was generated.
                                        @if (!CanGenerate)
                                        {
                                            <span class="d-block mt-1">
                                                <i class="bi bi-info-circle me-1"></i>
                                                Daily generation limit reached - try again tomorrow
                                            </span>
                                        }
                                    </p>
                                </div>
                            }
                            <div class="guide-content">
                                @((MarkupString)Project.GuideContent)
                            </div>
                        </div>
                    }
                </div>

                @* Message Center *@
                <MessageSidebar />
            </div>

            @* Main Content *@
            <div class="col-lg-9">



        @* Videos Section *@
        <div class="mb-5">
            @if (Project.Videos.Any())
            {
                <ProjectVideoList Videos="@Project.Videos"
                                  ShowSummaryPreview="true"
                                  ProjectId="@Id"
                                  OnRemove="@HandleRemoveVideo" />
            }
            else
            {
                <div class="text-center py-4 bg-light rounded">
                    <i class="bi bi-collection-play text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-3 mb-2">No videos in this project yet.</p>
                    <p class="text-muted small">Add videos from your library using the "Add to Project" button.</p>
                    <a href="/library" class="btn btn-primary mt-2">
                        <i class="bi bi-collection-play me-2"></i>
                        Go to Video Library
                    </a>
                </div>
            }
        </div>
            </div> @* End col-lg-9 *@
        </div> @* End row *@
    }
</div>

<style>
    .guide-content {
        line-height: 1.8;
        font-size: 1rem;
    }

        .guide-content h1,
        .guide-content h2,
        .guide-content h3,
        .guide-content h4,
        .guide-content h5,
        .guide-content h6 {
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .guide-content p {
            margin-bottom: 1rem;
        }

        .guide-content ul,
        .guide-content ol {
            margin-bottom: 1rem;
            padding-left: 2rem;
        }

        .guide-content li {
            margin-bottom: 0.5rem;
        }

        .guide-content code {
            background-color: var(--bs-secondary-bg);
            padding: 0.2rem 0.4rem;
            border-radius: 0.25rem;
            font-size: 0.875em;
        }

        .guide-content pre {
            background-color: var(--bs-secondary-bg);
            padding: 1rem;
            border-radius: 0.375rem;
            overflow-x: auto;
            margin-bottom: 1rem;
        }

        .guide-content blockquote {
            border-left: 4px solid var(--bs-primary);
            padding-left: 1rem;
            margin-left: 0;
            margin-bottom: 1rem;
            color: var(--bs-secondary-color);
        }
</style>

@* Edit Modal *@
@if (ShowEditModalState)
{
    <EditProjectModal IsVisible="@ShowEditModalState"
                      Project="@ProjectToEdit"
                      OnSave="@HandleUpdateProject"
                      OnCancel="@CloseModals"
                      OnDelete="@ShowDeleteModal" />
}

@* Delete Confirmation Modal *@
@if (ShowDeleteModalState && ProjectToDelete != null)
{
    <DeleteProjectConfirmation IsVisible="@ShowDeleteModalState"
                                Project="@ProjectToDelete"
                                OnConfirm="@HandleDeleteConfirm"
                                OnCancel="@CloseDeleteModal" />
}

@* Remove Video Confirmation *@
@if (ShowRemoveConfirmation && VideoToRemove != null)
{
    <div class="modal fade show" tabindex="-1"
         style="display: block; background-color: rgba(0,0,0,0.5);"
         @onclick="CloseRemoveConfirmation">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Remove Video from Project?</h5>
                    <button type="button" class="btn-close" @onclick="CloseRemoveConfirmation" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to remove <strong>@VideoToRemove.Title</strong> from this project?</p>
                    <p class="text-muted small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        This will not delete the video from your library, only remove it from this project.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseRemoveConfirmation" disabled="@IsRemovingVideo">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmRemoveVideo" disabled="@IsRemovingVideo">
                        @if (IsRemovingVideo)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            <span>Removing...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                            <span>Remove Video</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}
