@if (Guide == null)
{
    <!-- No Guide Yet -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-4">
                <i class="bi bi-book me-2"></i>
                Project Guide
            </h5>

            <div class="alert alert-info mb-4">
                <i class="bi bi-info-circle me-2"></i>
                No guide generated yet
            </div>

            <!-- Prerequisites Checklist -->
            <div class="mb-4">
                <h6 class="mb-3">Prerequisites for Guide Generation:</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        @if (AllVideosHaveSummaries)
                        {
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <span>All videos have summaries</span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>
                            <span class="text-danger">Some videos need summaries - generate them first</span>
                        }
                    </li>
                    <li class="mb-2">
                        @if (MeetsMinimumVideoCount)
                        {
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <span>Project has minimum required videos (@CurrentVideoCount)</span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>
                            <span class="text-danger">Project needs at least 3 videos (currently has @CurrentVideoCount)</span>
                        }
                    </li>
                    <li class="mb-2">
                        @if (CanGenerate)
                        {
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <span>Within daily generation limit</span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>
                            <span class="text-danger">Daily generation limit reached - try again tomorrow</span>
                        }
                    </li>
                </ul>
            </div>

            <!-- Generate Button -->
            <div class="d-grid">
                <button type="button"
                        class="btn btn-primary"
                        @onclick="HandleGenerate"
                        disabled="@(!CanGenerateGuide())"
                        title="@GetGenerateButtonTooltip()">
                    <i class="bi bi-magic me-2"></i>
                    Generate Guide
                </button>
            </div>

            @if (!CanGenerateGuide())
            {
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        @GetGenerateButtonTooltip()
                    </small>
                </div>
            }
        </div>
    </div>
}
else
{
    <!-- Guide Exists -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h5 class="card-title mb-0">
                    <i class="bi bi-book me-2"></i>
                    Project Guide
                </h5>
                <button type="button"
                        class="btn btn-outline-primary btn-sm"
                        @onclick="HandleRegenerate"
                        disabled="@(!CanGenerate)"
                        title="@GetRegenerateButtonTooltip()">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Regenerate Guide
                </button>
            </div>

            <!-- Guide Metadata -->
            <div class="guide-metadata mb-4">
                <div class="row g-2">
                    <div class="col-auto">
                        <small class="text-muted">
                            <i class="bi bi-calendar-check me-1"></i>
                            Generated on @Guide.GeneratedAt.ToLocalTime().ToString("MMM d, yyyy 'at' h:mm tt")
                        </small>
                    </div>
                    <div class="col-auto">
                        <small class="text-muted">
                            <i class="bi bi-camera-video me-1"></i>
                            Based on @Guide.VideoCount @(Guide.VideoCount == 1 ? "video" : "videos")
                        </small>
                    </div>
                </div>
            </div>

            <!-- Warning Indicators -->
            @if (NeedsRegeneration())
            {
                <div class="alert alert-warning mb-4">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Guide may be outdated
                    </h6>
                    <ul class="mb-0 small">
                        @if (Guide.VideoCount != CurrentVideoCount)
                        {
                            <li>
                                Videos changed since last generation (was @Guide.VideoCount, now @CurrentVideoCount)
                            </li>
                        }
                        @if (HasUserGuidanceChanged())
                        {
                            <li>
                                User guidance changed since last generation
                            </li>
                        }
                    </ul>
                    @if (!CanGenerate)
                    {
                        <small class="text-muted mt-2 d-block">
                            <i class="bi bi-info-circle me-1"></i>
                            Daily generation limit reached - try again tomorrow
                        </small>
                    }
                </div>
            }

            <!-- Guide Content -->
            <div class="guide-content">
                <div class="content-display">
                    @((MarkupString)Guide.Content)
                </div>
            </div>
        </div>
    </div>
}

<style>
    .guide-content {
        margin-top: 1.5rem;
    }

    .content-display {
        line-height: 1.8;
        font-size: 1rem;
    }

        .content-display h1,
        .content-display h2,
        .content-display h3,
        .content-display h4,
        .content-display h5,
        .content-display h6 {
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .content-display p {
            margin-bottom: 1rem;
        }

        .content-display ul,
        .content-display ol {
            margin-bottom: 1rem;
            padding-left: 2rem;
        }

        .content-display li {
            margin-bottom: 0.5rem;
        }

        .content-display code {
            background-color: var(--bs-secondary-bg);
            padding: 0.2rem 0.4rem;
            border-radius: 0.25rem;
            font-size: 0.875em;
        }

        .content-display pre {
            background-color: var(--bs-secondary-bg);
            padding: 1rem;
            border-radius: 0.375rem;
            overflow-x: auto;
            margin-bottom: 1rem;
        }

        .content-display blockquote {
            border-left: 4px solid var(--bs-primary);
            padding-left: 1rem;
            margin-left: 0;
            margin-bottom: 1rem;
            color: var(--bs-secondary-color);
        }

    .guide-metadata {
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--bs-border-color);
    }
</style>

@code {
    [Parameter]
    public ProjectGuideEntity? Guide { get; set; }

    [Parameter]
    public int CurrentVideoCount { get; set; }

    [Parameter]
    public string? CurrentUserGuidance { get; set; }

    [Parameter]
    public EventCallback OnRegenerate { get; set; }

    [Parameter]
    public bool CanGenerate { get; set; } = true;

    [Parameter]
    public bool AllVideosHaveSummaries { get; set; } = false;

    [Parameter]
    public bool MeetsMinimumVideoCount { get; set; } = false;

    private bool CanGenerateGuide()
    {
        return CanGenerate && AllVideosHaveSummaries && MeetsMinimumVideoCount;
    }

    private bool NeedsRegeneration()
    {
        if (Guide == null)
            return false;

        return Guide.VideoCount != CurrentVideoCount || HasUserGuidanceChanged();
    }

    private bool HasUserGuidanceChanged()
    {
        if (Guide == null)
            return false;

        // Both null or empty - no change
        if (string.IsNullOrWhiteSpace(CurrentUserGuidance) && string.IsNullOrWhiteSpace(Guide.UserGuidanceSnapshot))
            return false;

        // One is null/empty, other is not - changed
        if (string.IsNullOrWhiteSpace(CurrentUserGuidance) != string.IsNullOrWhiteSpace(Guide.UserGuidanceSnapshot))
            return true;

        // Compare actual values
        return !string.Equals(CurrentUserGuidance?.Trim(), Guide.UserGuidanceSnapshot?.Trim(), StringComparison.Ordinal);
    }

    private async Task HandleGenerate()
    {
        await OnRegenerate.InvokeAsync();
    }

    private async Task HandleRegenerate()
    {
        await OnRegenerate.InvokeAsync();
    }

    private string GetGenerateButtonTooltip()
    {
        if (!AllVideosHaveSummaries)
            return "All videos must have summaries before generating a guide";

        if (!MeetsMinimumVideoCount)
            return "Project needs at least 3 videos to generate a guide";

        if (!CanGenerate)
            return "Daily generation limit reached - try again tomorrow";

        return "Generate an AI-powered guide from your video summaries";
    }

    private string GetRegenerateButtonTooltip()
    {
        if (!CanGenerate)
            return "Daily generation limit reached - try again tomorrow";

        return "Regenerate the guide with current videos and settings";
    }
}
