@if (IsVisible)
{
    <div class="modal show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);"
         @onclick="HandleBackdropClick" @onclick:stopPropagation="false">
        <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Delete Project
                    </h5>
                    <button type="button"
                            class="btn-close btn-close-white"
                            @onclick="CloseModal"
                            disabled="@IsDeleting">
                    </button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @ErrorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <h6 class="mb-3">Are you sure you want to delete this project?</h6>
                        <div class="project-info p-3 bg-light rounded">
                            <h6 class="mb-2">@Project.Name</h6>
                            @if (!string.IsNullOrEmpty(Project.Description))
                            {
                                <p class="text-muted small mb-2">@Project.Description</p>
                            }
                            <div>
                                <span class="badge bg-primary">
                                    <i class="bi bi-camera-video me-1"></i>
                                    @VideoCount @(VideoCount == 1 ? "video" : "videos")
                                </span>
                                @if (Project.ProjectGuide != null)
                                {
                                    <span class="badge bg-success ms-2">
                                        <i class="bi bi-book me-1"></i>
                                        Has Guide
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-info-circle me-2"></i>
                            This will remove @VideoCount @(VideoCount == 1 ? "video" : "videos") from the project
                        </h6>
                        <ul class="mb-0 small">
                            <li>Videos will be removed from this project only</li>
                            <li>The videos themselves will remain in your library</li>
                            @if (Project.ProjectGuide != null)
                            {
                                <li><strong>The generated guide will be permanently deleted</strong></li>
                            }
                        </ul>
                    </div>

                    <div class="alert alert-danger mb-0">
                        <i class="bi bi-exclamation-octagon me-2"></i>
                        <strong>This action cannot be undone.</strong>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            @onclick="CloseModal"
                            disabled="@IsDeleting">
                        Cancel
                    </button>
                    <button type="button"
                            class="btn btn-danger"
                            @onclick="HandleConfirm"
                            disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-1"></i>
                        }
                        Delete Project
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter, EditorRequired]
    public ProjectEntity Project { get; set; } = null!;

    [Parameter]
    public int VideoCount { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private bool IsDeleting { get; set; }
    private string ErrorMessage { get; set; } = string.Empty;

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            IsDeleting = false;
            ErrorMessage = string.Empty;
        }
    }

    private async Task HandleConfirm()
    {
        IsDeleting = true;
        ErrorMessage = string.Empty;

        try
        {
            await OnConfirm.InvokeAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting project: {ex.Message}";
            IsDeleting = false;
        }
    }

    private async Task CloseModal()
    {
        if (!IsDeleting)
        {
            await OnCancel.InvokeAsync();
        }
    }

    private async Task HandleBackdropClick()
    {
        await CloseModal();
    }
}
