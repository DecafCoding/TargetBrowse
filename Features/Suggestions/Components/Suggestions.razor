@page "/suggestions"
@using Microsoft.AspNetCore.Authorization
@using TargetBrowse.Features.Suggestions.Models
@using TargetBrowse.Features.Suggestions.Components
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>Suggestions</PageTitle>

<div class="suggestions-page">
    <!-- Main Content -->
    <div class="row">
        <div class="col-lg-3">
            <!-- Help and Tips Sidebar -->
            <div class="sidebar-content">
                <!-- Progress Bar and Filters -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            Suggestions
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Filter and Sort Controls -->
                        <div class="queue-controls d-flex flex-wrap gap-2 mb-3">
                            <!-- Filter Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="suggestionFilter" data-bs-toggle="dropdown">
                                    <i class="bi bi-funnel me-1"></i>
                                    @(SuggestionQueueComponent?.GetFilterDisplayText() ?? "Filter")
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="suggestionFilter">
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleFilterChange(SuggestionFilter.All))">All Suggestions</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleFilterChange(SuggestionFilter.BothSources))">‚≠ê High Priority</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleFilterChange(SuggestionFilter.ChannelOnly))">üì∫ Channel Updates</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleFilterChange(SuggestionFilter.TopicOnly))">üîç Topic Matches</button></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleFilterChange(SuggestionFilter.NearExpiry))">‚è∞ Expiring Soon</button></li>
                                </ul>
                            </div>

                            <!-- Sort Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="suggestionSort" data-bs-toggle="dropdown">
                                    <i class="bi bi-sort-down me-1"></i>
                                    @(SuggestionQueueComponent?.GetSortDisplayText() ?? "Sort")
                                </button>
<ul class="dropdown-menu" aria-labelledby="suggestionSort">
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleSortChange(SuggestionSort.Random))">Random Order</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleSortChange(SuggestionSort.CreatedDesc))">Recently Added</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleSortChange(SuggestionSort.ExpiryAsc))">Expiring Soon</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleSortChange(SuggestionSort.PublishedDesc))">Published (Newest)</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleSortChange(SuggestionSort.PublishedAsc))">Published (Oldest)</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick="@(() => HandleSortChange(SuggestionSort.ScoreDesc))">Highest Score</button></li>
                                </ul>
                            </div>
                        </div>

                        @if (PendingSuggestionsCount > 0)
                        {
                            <div class="queue-progress">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <small class="text-muted">Queue Usage</small>
                                    <small class="text-muted">@PendingSuggestionsCount / 100</small>
                                </div>
                                <div class="progress" style="height: 4px;">
                                    <div class="progress-bar @GetProgressBarClass()"
                                         style="width: @(ProgressPercentage)%"></div>
                                </div>
                                @if (IsNearLimit)
                                {
                                    <small class="text-warning mt-1 d-block">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        @if (IsAtLimit)
                                        {
                                            @:Queue is full. Approve or remove suggestions to get new ones.
                                        }
                                        else
                                        {
                                            @:Approaching queue limit. Consider reviewing suggestions.
                                        }
                                    </small>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Recent Messages -->
                <MessageSidebar />
                <!-- Quick Stats -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            Quick Stats
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="how-it-works-steps">
                            <div class="step mb-3">
                                <!-- Generate Suggestions Button -->
                                <div class="suggestion-trigger">
                                    <button type="button"
                                            class="btn btn-primary btn-sm"
                                            @onclick="GenerateNewSuggestions"
                                            disabled="@IsGenerating"
                                            title="@GetGenerateButtonTooltip()">
                                        @if (IsGenerating)
                                        {
                                            <div class="spinner-border spinner-border-sm me-2" role="status">
                                                <span class="visually-hidden">Generating suggestions...</span>
                                            </div>
                                            <span>Generating...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-magic me-2"></i>
                                            <span>Get New Suggestions</span>
                                        }
                                    </button>

                                    <!-- Generation Status -->
                                    @if (!string.IsNullOrEmpty(GenerationStatus))
                                    {
                                        <div class="generation-status mt-2">
                                            <small class="text-muted">@GenerationStatus</small>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="step mb-3">
                                <div class="step-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2" style="width: 24px; height: 24px; font-size: 0.75rem;">1</div>
                                <div class="step-content d-inline-block">
                                    <strong>Tracked Channels: @TrackedChannelsCount</strong>
                                </div>
                            </div>
                            <div class="step mb-3">
                                <div class="step-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2" style="width: 24px; height: 24px; font-size: 0.75rem;">2</div>
                                <div class="step-content d-inline-block">
                                    <strong>Learning Topics: @TopicsCount</strong>
                                </div>
                            </div>
                            <div class="step mb-0">
                                <div class="step-icon bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2" style="width: 24px; height: 24px; font-size: 0.75rem;">3</div>
                                <div class="step-content d-inline-block">
                                    <strong>Pending Review: @PendingSuggestionsCount</strong>
                                </div>
                            </div>
                            <div class="step mb-0">
                                <div class="step-icon bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center me-2" style="width: 24px; height: 24px; font-size: 0.75rem;">3</div>
                                <div class="step-content d-inline-block @(LastGeneratedDaysAgo <= 1 ? "text-success" : LastGeneratedDaysAgo <= 7 ? "text-warning" : "text-muted")">
                                    Last Updated: @(LastGeneratedDaysAgo == 0 ? "Today" : $"{LastGeneratedDaysAgo}d ago")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-9">
            <!-- Suggestion Queue Component -->
            <SuggestionQueue @ref="SuggestionQueueComponent" OnSuggestionsChanged="HandleSuggestionsChanged" />
        </div>
    </div>
</div>