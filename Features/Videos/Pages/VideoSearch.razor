@page "/video-search"
@using Microsoft.AspNetCore.Authorization
@using TargetBrowse.Features.Videos.Models
@using TargetBrowse.Features.Videos.Components
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Video Search</PageTitle>

<div class="row">
    <div class="col-lg-3">
        <!-- Sidebar Content -->
        <div class="sidebar-content">
            <!-- Video Search Controls -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        Video Search @if (SearchResults.Any())
                        {
                            <text>(@SearchResults.Count Found)</text>
                        }
                    </h5>
                    <p class="text-muted mb-0 small">
                        Discover and add YouTube videos to your personal library for organized content consumption.
                    </p>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <EditForm Model="@SearchModel" OnValidSubmit="@HandleSearchSubmit">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <div class="input-group">
                                <InputText @bind-Value="SearchModel.SearchQuery"
                                           class="form-control"
                                           id="searchQuery"
                                           placeholder="Enter search term to search YouTube"
                                           disabled="@IsSearching" />
                                <button type="submit"
                                        class="btn btn-primary"
                                        disabled="@IsSearching">
                                    @if (IsSearching)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-search"></i>
                                    }
                                </button>
                            </div>
                            <ValidationMessage For="@(() => SearchModel.SearchQuery)" class="text-danger" />
                        </div>
                        <div class="mb-3">
                            <div class="dropdown d-grid">
                                <button class="btn btn-outline-secondary dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown">
                                    <i class="bi bi-hourglass-split me-1"></i>
                                    @CurrentDurationText
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDurationFilter(VideoDurationFilter.Any)'>Any Duration</button></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDurationFilter(VideoDurationFilter.Short)'>Short (&lt; 4 min)</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDurationFilter(VideoDurationFilter.Medium)'>Medium (4-20 min)</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDurationFilter(VideoDurationFilter.Long)'>Long (&gt; 20 min)</button></li>
                                </ul>
                            </div>
                        </div>
                        <div class="mb-0">
                            <div class="dropdown d-grid">
                                <button class="btn btn-outline-secondary dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    @CurrentDateFilterText
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDateFilter(VideoDateFilter.Any)'>Any Age</button></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDateFilter(VideoDateFilter.LastHour)'>Last Hour</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDateFilter(VideoDateFilter.Today)'>Today</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDateFilter(VideoDateFilter.ThisWeek)'>This Week</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDateFilter(VideoDateFilter.ThisMonth)'>This Month</button></li>
                                    <li><button class="dropdown-item" type="button" @onclick='() => SetDateFilter(VideoDateFilter.ThisYear)'>This Year</button></li>
                                </ul>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>

            <!-- Recent Messages -->
            <MessageSidebar />

            <!-- Quick Stats -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        Quick Stats
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted small">Recent Searches</span>
                        <span class="badge bg-primary">0</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted small">Videos Found</span>
                        <span class="badge bg-success">@SearchResults.Count</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <!-- Search Results Section -->
        <!-- Search Results -->
        @if (SearchResults.Any())
        {
            <!-- Results Grid - Now using the shared VideoCard component -->
            <div class="row g-3 video-results-grid">
                @foreach (var video in SearchResults)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6 mb-3">
                        <VideoCard Video="@video"
                                   DisplayMode="VideoDisplayMode.Search"
                                   OnVideoAdded="@HandleVideoAddedToLibrary" />
                    </div>
                }
            </div>

            @if (SearchResults.Count >= SearchModel.MaxResults)
            {
                <div class="alert alert-info mt-4 mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Showing maximum @SearchModel.MaxResults results. Try using more specific keywords to narrow your search.
                </div>
            }
        }
        else if (HasSearched && !IsSearching)
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-search" style="font-size: 3rem;"></i>
                <div class="mt-3 h5">No videos found matching your search criteria</div>
                <small>Try different keywords or adjust your search filters.</small>
            </div>
        }
    </div>
</div>