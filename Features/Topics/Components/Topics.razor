@page "/topics"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>My Topics - YouTube Video Tracker</PageTitle>

<div class="row">
    <div class="col-lg-3">
        <!-- Topic Tracking Progress -->

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    Topics
                </h5>
            </div>
            <div class="card-body p-3">
                @if (TopicListComponent != null && TopicListComponent.TopicCount > 0)
                {
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            @TopicListComponent.TopicCount of 10 topics used
                        </small>
                        @if (TopicListComponent.TopicCount >= 8)
                        {
                            <small class="text-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Approaching limit
                            </small>
                        }
                    </div>

                    <!-- Progress Bar -->
                    <div class="progress" style="height: 4px;">
                        <div class="progress-bar @TopicListComponent.GetProgressBarClass()"
                             role="progressbar"
                             style="width: @(TopicListComponent.TopicCount * 10)%"
                             aria-valuenow="@TopicListComponent.TopicCount"
                             aria-valuemin="0"
                             aria-valuemax="10">
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted small mb-0">
                        Add your first topic using the Enter A Topic form below
                    </p>
                }
            </div>
        </div>


        <!-- Add Topic Component (moved to left side) -->
        <div class="mb-4">
            <AddTopic @ref="AddTopicComponent"
                      OnTopicAdded="HandleTopicAdded"
                      ParentTopicCount="@(TopicListComponent?.TopicCount ?? 0)" />
        </div>

        <!-- Recent Messages -->
        <MessageSidebar />

    </div>

    <div class="col-lg-9">
        <!-- Topic List Component (converted to table) -->
        <TopicList @ref="TopicListComponent" OnTopicsChanged="HandleTopicsChanged" />
    </div>
</div>