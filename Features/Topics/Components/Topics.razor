@page "/topics"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>My Topics - YouTube Video Tracker</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-1">My Topics</h1>
        <p class="text-muted mb-0">
            Define your learning interests to get personalized YouTube content suggestions.
        </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <!-- Add Topic Component -->
        <AddTopic />
        
        <!-- Future: Topic List Component will go here -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>
                    Your Topics
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center py-4">
                    <i class="bi bi-lightbulb text-muted" style="font-size: 3rem;"></i>
                    <h6 class="mt-3 text-muted">Topic list coming soon</h6>
                    <p class="text-muted small mb-0">
                        In the next iteration, you'll be able to view, edit, and remove your topics here.
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6">
        <!-- Help and Tips -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-question-circle me-2"></i>
                    Tips for Better Suggestions
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-3">
                        <strong><i class="bi bi-check-circle text-success me-2"></i>Be Specific:</strong>
                        <br><small class="text-muted">"Machine Learning" instead of "Technology"</small>
                    </li>
                    <li class="mb-3">
                        <strong><i class="bi bi-check-circle text-success me-2"></i>Use Keywords:</strong>
                        <br><small class="text-muted">Terms you'd search for on YouTube</small>
                    </li>
                    <li class="mb-3">
                        <strong><i class="bi bi-check-circle text-success me-2"></i>Multiple Topics:</strong>
                        <br><small class="text-muted">Add 3-5 topics for better coverage</small>
                    </li>
                    <li class="mb-0">
                        <strong><i class="bi bi-check-circle text-success me-2"></i>Stay Relevant:</strong>
                        <br><small class="text-muted">Focus on your current learning goals</small>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Feature Preview -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-rocket me-2"></i>
                    What's Next?
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    Once you've added topics, you'll be able to:
                </p>
                <ul class="list-unstyled small text-muted mb-0">
                    <li class="mb-2"><i class="bi bi-arrow-right me-2"></i>Track YouTube channels</li>
                    <li class="mb-2"><i class="bi bi-arrow-right me-2"></i>Get personalized suggestions</li>
                    <li class="mb-2"><i class="bi bi-arrow-right me-2"></i>Rate content for better recommendations</li>
                    <li class="mb-0"><i class="bi bi-arrow-right me-2"></i>Generate AI-powered video summaries</li>
                </ul>
            </div>
        </div>
    </div>
</div>

