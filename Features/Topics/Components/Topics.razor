@page "/topics"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>My Topics - YouTube Video Tracker</PageTitle>

<div class="row">
    <div class="col-lg-3">
        <!-- Topic Tracking Progress -->
        @if (TopicListComponent != null && TopicListComponent.TopicCount > 0)
        {
            <div class="card mb-4">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            @TopicListComponent.TopicCount of 10 topics used
                        </small>
                        @if (TopicListComponent.TopicCount >= 8)
                        {
                            <small class="text-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Approaching limit
                            </small>
                        }
                    </div>

                    <!-- Progress Bar -->
                    <div class="progress" style="height: 4px;">
                        <div class="progress-bar @TopicListComponent.GetProgressBarClass()"
                             role="progressbar"
                             style="width: @(TopicListComponent.TopicCount * 10)%"
                             aria-valuenow="@TopicListComponent.TopicCount"
                             aria-valuemin="0"
                             aria-valuemax="10">
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Add Topic Component (moved to left side) -->
        <div class="mb-4">
            <AddTopic @ref="AddTopicComponent" OnTopicAdded="HandleTopicAdded" />
        </div>

        <!-- Recent Messages -->
        <MessageSidebar />

        <!-- Help and Tips -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-question-circle me-2"></i>
                    Tips
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong><i class="bi bi-check-circle text-success me-2"></i>Be Specific:</strong>
                    <span class="text-muted">"Machine Learning" instead of "Technology"</span>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-check-circle text-success me-2"></i>Use Keywords:</strong>
                    <span class="text-muted">Terms you'd search for on YouTube</span>
                </div>
                <div class="mb-3">
                    <strong><i class="bi bi-check-circle text-success me-2"></i>Multiple Topics:</strong>
                    <span class="text-muted">Add 3-5 topics for better coverage</span>
                </div>
                <div class="mb-0">
                    <strong><i class="bi bi-check-circle text-success me-2"></i>Stay Relevant:</strong>
                    <span class="text-muted">Focus on your current learning goals</span>
                </div>
            </div>
        </div>

        <!-- Feature Preview -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-rocket me-2"></i>
                    What's Next?
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    Once you've added topics, you'll be able to:
                </p>
                <ul class="list-unstyled small text-muted mb-0">
                    <li class="mb-2"><i class="bi bi-arrow-right me-2"></i>Track YouTube channels</li>
                    <li class="mb-2"><i class="bi bi-arrow-right me-2"></i>Get personalized suggestions</li>
                    <li class="mb-2"><i class="bi bi-arrow-right me-2"></i>Rate content for better recommendations</li>
                    <li class="mb-0"><i class="bi bi-arrow-right me-2"></i>Generate AI-powered video summaries</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <!-- Topic List Component (converted to table) -->
        <TopicList @ref="TopicListComponent" OnTopicsChanged="HandleTopicsChanged" />
    </div>
</div>