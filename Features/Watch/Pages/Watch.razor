@page "/watch/{youTubeVideoId}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using System.Security.Claims
@using System.Net
@using TargetBrowse.Features.Watch.Models
@using TargetBrowse.Features.Watch.Services
@using TargetBrowse.Services.Interfaces

@attribute [Authorize]

<PageTitle>@GetPageTitle()</PageTitle>

<!-- Loading State -->
@if (Model.IsLoading)
{
    <div class="d-flex justify-content-center align-items-center py-5" style="min-height: 400px;">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted">Loading video...</p>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="d-flex align-items-center justify-content-center py-5" style="min-height: 400px;">
        <div class="alert alert-danger" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Unable to Load Video
            </h5>
            <p class="mb-3">@Model.ErrorMessage</p>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-danger" @onclick="RetryLoad">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Try Again
                </button>
                <a href="/video-library" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Library
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <!-- Main Content - Video Player and Details -->
        <div class="col-lg-8">
            <!-- Video Player Container -->
            <div class="mb-1 bg-dark rounded overflow-hidden shadow-sm">
                <div class="ratio ratio-16x9">
                    <iframe src="@Model.EmbedUrl"
                            title="@Model.Title"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen
                            loading="lazy"
                            class="rounded">
                    </iframe>
                </div>
            </div>

            <!-- Video Information -->
            <div class="mt-1">
                <!-- Video Title with Duration -->
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h1 class="h4 mb-0 fw-semibold lh-sm flex-grow-1 me-3">
                        @Model.Title
                    </h1>
                    @if (!string.IsNullOrEmpty(Model.DurationDisplay))
                    {
                        <span class="badge bg-secondary fs-6 flex-shrink-0">
                            <i class="bi bi-clock me-1"></i>
                            @Model.DurationDisplay
                        </span>
                    }
                </div>

                <!-- Video Metadata Row -->
                <div class="py-0">
                    <div class="row align-items-center">
                        <!-- Channel Info -->
                        <div class="col-12">
                            <div class="d-flex align-items-center mb-1">
                                <!-- Channel Thumbnail -->
                                @if (!string.IsNullOrEmpty(Model.ChannelThumbnailUrl))
                                {
                                    <div class="me-3">
                                        <img src="@Model.ChannelThumbnailUrl"
                                             class="rounded-circle d-none d-sm-block"
                                             alt="@Model.ChannelName"
                                             loading="lazy"
                                             width="48"
                                             height="48"
                                             style="object-fit: cover;" />
                                        <img src="@Model.ChannelThumbnailUrl"
                                             class="rounded-circle d-block d-sm-none"
                                             alt="@Model.ChannelName"
                                             loading="lazy"
                                             width="40"
                                             height="40"
                                             style="object-fit: cover;" />
                                    </div>
                                }


                                <!-- Channel Details with Stats -->
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-semibold">
                                        @Model.ChannelName

                                        <small class="text-muted flex-wrap mx-3">
                                            @if (!string.IsNullOrEmpty(Model.ViewCountDisplay))
                                            {
                                                <span class="me-3">
                                                    <i class="bi bi-eye"></i>
                                                    @Model.ViewCountDisplay
                                                </span>
                                            }

                                            @if (!string.IsNullOrEmpty(Model.LikeCountDisplay))
                                            {
                                                <span class="me-3">
                                                    <i class="bi bi-hand-thumbs-up"></i>
                                                    @Model.LikeCountDisplay
                                                </span>
                                            }

                                            @if (!string.IsNullOrEmpty(Model.CommentCountDisplay))
                                            {
                                                <span class="me-3">
                                                    <i class="bi bi-chat"></i>
                                                    @Model.CommentCountDisplay
                                                </span>
                                            }

                                            <span>
                                                <i class="bi bi-calendar"></i>
                                                @Model.PublishedDisplay
                                            </span>
                                        </small>
                                    </h6>
                                    <!-- Watch Status Badge -->
                                    <span class="badge @GetWatchStatusBadgeClass() me-1">
                                        <i class="bi @GetWatchStatusIcon() me-1"></i>
                                        @GetWatchStatusDisplay()
                                    </span>

                                    @if (Model.IsInLibrary)
                                    {
                                        <span class="badge bg-success me-1">
                                            <i class="bi bi-bookmark-check me-1"></i>
                                            In Library
                                        </span>
                                    }

                                    <!-- Rating Status -->
                                    @if (Model.UserRating.HasValue)
                                    {
                                        <span class="badge bg-warning me-1">
                                            <i class="bi bi-star-fill me-1"></i>
                                            @Model.UserRating.Value @(Model.UserRating.Value == 1 ? "Star" : "Stars")
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Status Badges (moved under channel) -->
                            <div class="d-flex flex-wrap gap-2 mb-1">
                                <!-- Video Stats (directly after channel title) -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Left Sidebar - Action Buttons -->
        <div class="col-lg-4">
            <!-- Content Display Card -->
            <div class="card watch-actions-card h-100">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">
                            <i class="bi bi-file-text me-2"></i>
                            @GetContentHeaderTitle()
                        </h6>
                    </div>

                    <!-- Content View Toggle Buttons -->
                    <div class="d-flex gap-2" role="group" aria-label="Content view options">
                        <!-- Description Button -->
                        <button type="button"
                                class="btn flex-fill @GetButtonClass(ContentViewMode.Description)"
                                @onclick="() => HandleContentButtonClick(ContentViewMode.Description)"
                                disabled="@IsButtonDisabled(ContentViewMode.Description)">
                            @GetButtonLabel(ContentViewMode.Description)
                        </button>

                        <!-- Transcript Button -->
                        <button type="button"
                                class="btn flex-fill @GetButtonClass(ContentViewMode.Transcript)"
                                @onclick="() => HandleContentButtonClick(ContentViewMode.Transcript)"
                                disabled="@(IsRetrievingTranscript || IsButtonDisabled(ContentViewMode.Transcript))">
                            @if (IsRetrievingTranscript && !IsContentAvailable(ContentViewMode.Transcript))
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                <span>Retrieving...</span>
                            }
                            else
                            {
                                <span>@GetButtonLabel(ContentViewMode.Transcript)</span>
                            }
                        </button>

                        <!-- Summary Button -->
                        <button type="button"
                                class="btn flex-fill @GetButtonClass(ContentViewMode.Summary)"
                                @onclick="() => HandleContentButtonClick(ContentViewMode.Summary)"
                                disabled="@(IsGeneratingSummary || IsButtonDisabled(ContentViewMode.Summary))">
                            @if (IsGeneratingSummary && !IsContentAvailable(ContentViewMode.Summary))
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                <span>Generating...</span>
                            }
                            else
                            {
                                <span>@GetButtonLabel(ContentViewMode.Summary)</span>
                            }
                        </button>
                    </div>

                </div>

                <div class="card-body d-flex flex-column">
                    @if (CurrentViewMode == ContentViewMode.Summary && !string.IsNullOrWhiteSpace(Model.SummaryContent))
                    {
                        <div class="mb-3" style="white-space: pre-wrap; word-wrap: break-word; line-height: 1.6;">
                            @Model.SummaryContent
                        </div>
                    }
                    else if (CurrentViewMode == ContentViewMode.Transcript && !string.IsNullOrWhiteSpace(Model.RawTranscript))
                    {
                        <div class="mb-3 overflow-auto" style="white-space: pre-wrap; word-wrap: break-word; line-height: 1.6; max-height: 525px;">
                            @Model.RawTranscript
                        </div>
                    }
                    else if (CurrentViewMode == ContentViewMode.Description && !string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <p class="mb-3 lh-base" style="white-space: pre-wrap; word-wrap: break-word;">
                            @((MarkupString)WebUtility.HtmlDecode(Model.Description))
                        </p>
                    }
                    else
                    {
                        <!-- No content available for selected view -->
                        <div class="text-muted text-center py-4">
                            <i class="bi bi-file-earmark-x display-4"></i>
                            <p class="mt-2">No @(CurrentViewMode.ToString().ToLower()) available for this video.</p>
                        </div>
                    }

                    <!-- Back to Library Navigation -->
                    <a href="/video-library" class="btn btn-outline-secondary mt-auto">
                        <i class="bi bi-arrow-left me-1"></i>
                        Back to Library
                    </a>
                </div>
            </div>
        </div>
    </div>

}