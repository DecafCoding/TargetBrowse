@page "/watch/{youTubeVideoId}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using System.Security.Claims
@using TargetBrowse.Features.Watch.Models
@using TargetBrowse.Features.Watch.Services
@using TargetBrowse.Features.Watch.Components
@using TargetBrowse.Services.Interfaces

@attribute [Authorize]

<PageTitle>@GetPageTitle()</PageTitle>

<!-- Loading State -->
@if (Model.IsLoading)
{
    <div class="d-flex justify-content-center align-items-center py-5" style="min-height: 400px;">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted">Loading video...</p>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="d-flex align-items-center justify-content-center py-5" style="min-height: 400px;">
        <div class="alert alert-danger" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Unable to Load Video
            </h5>
            <p class="mb-3">@Model.ErrorMessage</p>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-danger" @onclick="RetryLoad">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Try Again
                </button>
                <a href="/video-library" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Library
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <!-- Main Content - Video Player and Details -->
        <div class="col-lg-9">
            <!-- Video Player Container -->
            <div class="mb-1 bg-dark rounded overflow-hidden shadow-sm">
                <div class="ratio ratio-16x9">
                    <iframe src="@Model.EmbedUrl"
                            title="@Model.Title"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen
                            loading="lazy"
                            class="rounded">
                    </iframe>
                </div>
            </div>

            <!-- Video Information -->
            <div class="mt-1">
                <!-- Video Title with Duration -->
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h1 class="h4 mb-0 fw-semibold lh-sm flex-grow-1 me-3">
                        @Model.Title
                    </h1>
                    @if (!string.IsNullOrEmpty(Model.DurationDisplay))
                    {
                        <span class="badge bg-secondary fs-6 flex-shrink-0">
                            <i class="bi bi-clock me-1"></i>
                            @Model.DurationDisplay
                        </span>
                    }
                </div>

                <!-- Video Metadata Row -->
                <div class="py-1">
                    <div class="row align-items-center">
                        <!-- Channel Info -->
                        <div class="col-12">
                            <div class="d-flex align-items-center mb-3">
                                <!-- Channel Thumbnail -->
                                @if (!string.IsNullOrEmpty(Model.ChannelThumbnailUrl))
                                {
                                    <div class="me-3">
                                        <img src="@Model.ChannelThumbnailUrl"
                                             class="rounded-circle d-none d-sm-block"
                                             alt="@Model.ChannelName"
                                             loading="lazy"
                                             width="48"
                                             height="48"
                                             style="object-fit: cover;"
                                             onerror="this.src='https://via.placeholder.com/48x48?text=CH'" />
                                        <img src="@Model.ChannelThumbnailUrl"
                                             class="rounded-circle d-block d-sm-none"
                                             alt="@Model.ChannelName"
                                             loading="lazy"
                                             width="40"
                                             height="40"
                                             style="object-fit: cover;"
                                             onerror="this.src='https://via.placeholder.com/40x40?text=CH'" />
                                    </div>
                                }


                                <!-- Channel Details with Stats -->
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-semibold">
                                        @Model.ChannelName

                                        <small class="text-muted flex-wrap mx-3">
                                            @if (!string.IsNullOrEmpty(Model.ViewCountDisplay))
                                            {
                                                <span class="me-3">
                                                    <i class="bi bi-eye"></i>
                                                    @Model.ViewCountDisplay
                                                </span>
                                            }

                                            @if (!string.IsNullOrEmpty(Model.LikeCountDisplay))
                                            {
                                                <span class="me-3">
                                                    <i class="bi bi-hand-thumbs-up"></i>
                                                    @Model.LikeCountDisplay
                                                </span>
                                            }

                                            @if (!string.IsNullOrEmpty(Model.CommentCountDisplay))
                                            {
                                                <span class="me-3">
                                                    <i class="bi bi-chat"></i>
                                                    @Model.CommentCountDisplay
                                                </span>
                                            }

                                            <span>
                                                <i class="bi bi-calendar"></i>
                                                @Model.PublishedDisplay
                                            </span>
                                        </small>
                                    </h6>
                                    <!-- Watch Status Badge -->
                                    <span class="badge @GetWatchStatusBadgeClass() me-1">
                                        <i class="bi @GetWatchStatusIcon() me-1"></i>
                                        @GetWatchStatusDisplay()
                                    </span>

                                    @if (Model.IsInLibrary)
                                    {
                                        <span class="badge bg-success me-1">
                                            <i class="bi bi-bookmark-check me-1"></i>
                                            In Library
                                        </span>
                                    }

                                    <!-- Rating Status -->
                                    @if (Model.UserRating.HasValue)
                                    {
                                        <span class="badge bg-warning me-1">
                                            <i class="bi bi-star-fill me-1"></i>
                                            @Model.UserRating.Value @(Model.UserRating.Value == 1 ? "Star" : "Stars")
                                        </span>
                                    }

                                    <!-- Transcript Status -->
                                    <span class="badge @(Model.HasTranscript ? "bg-info" : "bg-secondary") me-1">
                                        <i class="bi @(Model.HasTranscript ? "bi-file-text-fill" : "bi-file-text") me-1"></i>
                                        @(Model.HasTranscript ? "Transcript" : "No Transcript")
                                    </span>

                                    <!-- Summary Status -->
                                    <span class="badge @(Model.HasSummary ? "bg-info" : "bg-secondary") me-1">
                                        <i class="bi @(Model.HasSummary ? "bi-file-earmark-text-fill" : "bi-file-earmark-text") me-1"></i>
                                        @(Model.HasSummary ? "Summary" : "No Summary")
                                    </span>
                                </div>
                            </div>

                            <!-- Status Badges (moved under channel) -->
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <!-- Video Stats (directly after channel title) -->

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Video Description -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-1">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-text-paragraph me-2"></i>
                                    Description
                                </h6>
                                <p class="mb-0 lh-base" style="white-space: pre-wrap; word-wrap: break-word;">
                                    @Model.GetShortDescription()
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Left Sidebar - Action Buttons -->
        <div class="col-lg-3">
            <WatchActionButtons Model="@Model" />
        </div>
    </div>

}